{
  "name": "splito",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:staging": "vite --mode staging",
    "build": "vite build",
    "build:staging": "vite build --mode staging",
    "build:production": "vite build --mode production",
    "lint": "eslint .",
    "preview": "vite preview",
    "cap:init": "cap init Splito fr.splito.app --web-dir=dist",
    "cap:add:android": "cap add android",
    "cap:add:ios": "cap add ios",
    "cap:sync": "cap sync",
    "cap:open:android": "cap open android",
    "cap:open:ios": "cap open ios",
    "build:mobile": "vite build && cap sync",
    "deploy:functions": "cd functions && npm run deploy",
    "deploy:staging": "npm run build:staging && firebase hosting:channel:deploy staging --expires 30d",
    "deploy:production": "npm run build:production && firebase deploy --only hosting",
    "deploy:preview": "npm run build:staging && firebase hosting:channel:deploy preview-$(date +%s)"
  },
  "dependencies": {
    "lucide-react": "^0.344.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.22.3",
    "firebase": "^10.8.1",
    "clsx": "^2.1.0",
    "tailwind-merge": "^2.2.1",
    "zod": "^3.22.4",
    "react-hook-form": "^7.51.0",
    "@hookform/resolvers": "^3.3.4",
    "chart.js": "^4.4.2",
    "react-chartjs-2": "^5.2.0",
    "@capacitor/core": "^5.7.0",
    "@capacitor/camera": "^5.0.9",
    "@capacitor/share": "^5.0.7",
    "@capacitor/splash-screen": "^5.0.7",
    "@capacitor/status-bar": "^5.0.7",
    "@capacitor/app": "^5.0.7",
    "@capacitor/haptics": "^5.0.7",
    "@capacitor/keyboard": "^5.0.7",
    "@stripe/stripe-js": "^2.4.0",
    "@stripe/react-stripe-js": "^2.4.0",
    "stripe": "^14.18.0",
    "firebase-admin": "^12.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2",
    "@capacitor/cli": "^5.7.0",
    "firebase-tools": "^13.4.1",
    "@netlify/functions": "^2.6.0",
    "@types/stripe": "^8.0.417"
  }
}